<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="90dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="1dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/drawable_send"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameSendGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text=""
                android:textStyle="bold"
                android:textSize="13sp" />

            <View
                android:id="@+id/viewSendGroup"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4C4C4C"/>

            <ImageView
                android:id="@+id/imgSendGroup"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/msgSendGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="start"
                android:text="her"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/feelingsSendGroup"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_fb_love"
            android:layout_marginStart="10dp"
            android:visibility="invisible"
            android:background="@drawable/circle_green"
            android:backgroundTint="@color/white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
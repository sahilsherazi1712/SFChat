<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginEnd="90dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="1dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:background="@drawable/drawable_receive">

            <TextView
                android:id="@+id/nameReceiveGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text=""
                android:textSize="13sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/viewReceiveGroup"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4C4C4C" />

            <ImageView
                android:id="@+id/imgReceiveGroup"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/msgReceiveGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="start"
                android:text="@string/longTextView"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/feelingsReceiveGroup"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_fb_love"
            android:layout_marginStart="10dp"
            android:visibility="invisible"
            android:background="@drawable/circle_green"
            android:backgroundTint="@color/white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>